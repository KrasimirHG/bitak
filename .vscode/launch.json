    "version": "0.2.0",
    "configurations": [    
        {
            "command": "npm run dev",
            "name": "Run server and client",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run server",
            "name": "Run server",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run client",
            "name": "Run client",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js"
        }
    ]
}